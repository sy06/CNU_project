<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cnu_mainbackground"
    tools:context="com.cnu_bus_alarm.cnu.MainActivity">

        <Button
            android:id="@+id/locationbtn"
            android:layout_width="200dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:layout_marginBottom="210dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/cnu_buslocation" />

        <Button
            android:id="@+id/routebtn"
            android:layout_width="200dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/cnu_routecheck"
            android:onClick="onClick" />

        <Button
            android:id="@+id/timebtn"
            android:layout_width="200dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:layout_marginRight="50dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/cnu_timecheck" />

                <Button
                    android:id="@+id/adminbtn"
                    android:layout_width="43dp"
                    android:layout_height="40dp"
                    android:onClick="onClick"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="90dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/cnu_admin"/>

            <Button
                android:id="@+id/alarmbtn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:onClick="onAlarmClickSecond"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/cnu_moon" />

         <Button
             android:scaleType="fitXY"
             android:id="@+id/alarmbtn1"
            android:layout_width="125dp"
            android:layout_height="125dp"
             android:layout_gravity="bottom|right"
             android:layout_marginRight="15dp"
             android:layout_marginBottom="60dp"
             android:onClick="onAlarmClickFirst"
            android:background="@drawable/cnu_sun" />
</FrameLayout>